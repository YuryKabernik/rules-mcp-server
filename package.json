{
  "name": "rules-mcp-server",
  "version": "1.0.0",
  "description": "MCP server providing organized development rules, best practices, and architectural guidance for microfrontend and microservice applications. Supports filtering by project system, language, and code type.",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "rules-mcp-server": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "dev": "tsx src/index.ts",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YuryKabernik/rules-mcp-server.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "microfrontend",
    "microservice",
    "rules",
    "best-practices"
  ],
  "author": "",
  "license": "ISC",
  "files": [
    "build/**/*",
    "rules/**/*.md",
    "README.md",
    "QUICK_START.md",
    "DEVELOPER_GUIDE.md",
    "NPM_USAGE.md",
    "mcp-config.example.json"
  ],
  "bugs": {
    "url": "https://github.com/YuryKabernik/rules-mcp-server/issues"
  },
  "homepage": "https://github.com/YuryKabernik/rules-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@vitest/ui": "^4.0.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
